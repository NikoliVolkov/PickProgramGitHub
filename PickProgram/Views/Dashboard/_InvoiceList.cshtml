@model List<Invoice>
<table class="table" data-filtering="true" data-sorting="true" data-paging="true" data-editing="true" data-editing-always-show="true" data-paging-widget="true" data-paging-widget-count-format="Total Pending Onsite: {TR}">
    <thead>
        <tr>
            <th data-visible="false">Invoice Id</th>
            <th>Invoice #</th>
            <th># of Parts</th>
            <th>Pick Location</th>

            <th class="showHide" data-visible="true">Employee</th>
            <th>Created On</th>
            <th>Assigned On</th>
            <th>Elapsed Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {

            <tr>
                <td class="invoiceid">@x.InvoiceId</td>
                <td>@x.InvoiceNumber</td>

                <td>@x.NumberOfParts</td>
                <td><span style="font-weight:bold; text-decoration:underline;">@x.PickLocation.LocationDescription.Substring(0, 1)</span>@x.PickLocation.LocationDescription.Substring(1, x.PickLocation.LocationDescription.Length - 1) </td>

                        <td>
                            @if (x.AssignedEmployeeId == null)
                            {
                                <button id="@("assign" + x.InvoiceId)" onclick="getEmpDDL($(this))" type="button" class="btn btn-default btn-sm">Assign Employee <span class="glyphicon glyphicon-user" aria-hidden="true"></span></button>

                            }
                            else
                            {
                                <span>@x.AssignedEmployee.FirstName&nbsp;@x.AssignedEmployee.LastName</span>
                            }

                        </td>
                  <td>@x.StartDate</td>
                  <td>@x.AssignedDate</td>
                  <td>@if(x.AssignedDate.HasValue){ <span class="timerCell">@x.AssignedDate</span> }</td>
                  <td>@x.Status.Status</td>
        </tr>

    }
    </tbody>
</table>
